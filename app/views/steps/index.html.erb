<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.list.title %></td>
        <td><%= step.body %></td>
        <td><%= link_to 'Show', list_step_path(@list, step) %></td>
        <td><%= link_to 'Edit', edit_list_step_path(@list, step) %></td>
        <td><%= link_to 'Destroy', [@list, step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Lists', lists_path %> |
<%= link_to 'New Step', new_list_step_path %>
